{% extends 'admin/base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Liste des Participants</h1>

    {% if participants is empty %}
        <div class="alert alert-info text-center">
            Aucun participant trouvé.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for participant in participants %}
                        <tr>
                            <td>{{ participant.id }}</td>
                            <td>{{ participant.nom }}</td>
                            <td>{{ participant.prenom }}</td>
                            <td>{{ participant.email }}</td>
                            <td>{{ participant.numeroTel }}</td> 
                            <td class="text-center">
                                <a href="{{ path('app_participant_delete', { id: participant.id }) }}"
                                   class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Voulez-vous vraiment supprimer ce participant ?');">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
